<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
          <div class="card-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Почта</p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", value: resource.email %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Пароль</p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-user" %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Подтвердите пароль</p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.label :password_confirmation, class: "form-control form-control-user" %><br />
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Текущий пароль(введите для подтверждения изменений)</p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control form-control-user" %>
                </div>
              </div>
              <hr>
              <%= f.submit "Сохранить", class: "btn btn-primary btn-user btn-block" %>
            </div>
          <% end %>
          <hr>
          <%= button_to "Удалить аккаунт", registration_path(resource_name), data: { confirm: "Вы уверены?", turbo_confirm: "Вы уверены?" }, method: :delete, class: "btn btn-danger btn-user btn-block" %></div>
        </div>
      </div>
    </div>
  </div>
</section>
