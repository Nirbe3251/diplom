<body class="bg-gradient-primary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="card o-hidden border-0 shadow-lg py-5 mt-5">
          <div class="card-body">
            <div class="row">
              <div class="col-12">
                <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Создание аккаунта</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "user"}, remote: true) do |f| %>
                <div class="form-group">
                  <%= f.text_field :name, class: "form-control form-control-user", placeholder: "Введите имя" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :surname, class: "form-control form-control-user", placeholder: "Введите фамилию" %>
                </div>
                <div class="form-group">
                  <%= f.text_field :email, class: "form-control form-control-user", placeholder: "Введите почту" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "new-password", placeholder: "Введите пароль", class: "form-control form-control-user" %>
                </div>
                <div class="form-group">
                  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-user", placeholder: "Повторите пароль" %>
                </div>
                <div class="actions registration_submit">
                  <%= f.submit "Зарегестрировать аккаунт", class: 'btn btn-primary btn-user btn-block' %>
                </div>
              <% end %>
              <hr>
              <div class="text-center">
                <%= link_to "Войти в аккаунт", new_session_path(resource_name), class: "small" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>