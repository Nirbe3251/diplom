<body class="bg-gradient-primary">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-6">
        <div class="card o-hidden border-0 shadow-lg py-5 mt-5">
          <div class="card-body">
            <div class="row">
              <div class="col-12">
                <div class="p-5">
                  <div class="text-center">
                    <h1 class="h4 text-gray-900 mb-4">Вход в аккаунт</h1>
                  </div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "user"}) do |f| %>
                  <div class="form-group">
                      <%= f.email_field :email,autofocus: true, autocomplete: "email", class: 'form-control form-control-user', placeholder: "Введите почту" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-user', placeholder: "Введите пароль" %>
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox small">
                      <%- if devise_mapping.rememberable? %>
                          <%= f.check_box :remember_me, class: "custom-control-input" %>
                          <%= f.label :remember_me, "Запомнить меня", class: "custom-control-label" %>
                      <%- end %>
                    </div>
                  </div>
                  <div class="actions">
                    <%= f.submit "Войти", class: 'btn btn-primary btn-user btn-block', method: :get %>
                  </div>
                  <% end %>
                  <hr>
                  <div class="text-center">
                    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
                      <%= link_to "Зарегистрироваться", new_registration_path(resource_name), class: 'small' %>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>