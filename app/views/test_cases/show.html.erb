<section>
  <div class="container-fluid">
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="align-center h3 text-gray-800">Тест-кейс <%= @test_case.id %></h1>
        <div class="d-sm-flex align-items-center justify-content-between">
            <h1 class="h3 mb-0 text-gray-800"></h1>
            <a href="<%= edit_test_case_path %>" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Редактирование тест-кейса</a>
        </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
          <div class="card-body">
            <div class="row">
                <div class="col-sm-2 align-middle">
                    <p class="mb-0">Название тест-кейса</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-8">
                    <text class="text-center"><%= @test_case.title %></text>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <p class="mb-0">Шаги тест-кейса</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-9">
                    <textarea class="form-control form-control-user" readonly contenteditable=plaintext-only field-sizing=content"><%= @test_case.steps %></textarea>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <p class="mb-0">Ожидаемый результат</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-9">
                    <text class="text-center"><%= @test_case.expected_result %></text>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <p class="mb-0">Требования</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-9">
                    <text class="text-center"><%= @test_case.expected_result %></text>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <p class="mb-0">Модуль</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-9">
                    <text class="text-center"><%= @test_case.test_module %></text>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <p class="mb-0">Предусловие</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-9">
                    <text class="text-center"><%= @test_case.test_data %></text>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <p class="mb-0">Постусловие</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-9">
                    <text class="text-center"><%= @test_case.postconditions %></text>
                </div>
            </div>
            <hr>
            <div class="row">
                <div class="col-sm-2">
                    <p class="mb-0">Проект</p>
                </div>
                <i class="topbar-divider"></i>
                <div class="form-group col-sm-9">
                    <text class="text-center"><%= @test_case.project.title %></text>
                </div>
            </div>
            <hr>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>