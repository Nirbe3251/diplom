<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Планы тестирования</h1>
    <h1 class="h3 mb-0 text-gray-800"></h1>
    <% if current_user&.roles&.create_test_plan? %>
        <a href="<%= new_test_plan_path %>" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">Создание плана тестирования</a>
    <% end %>
</div>

<div class="row">
    <!-- Earnings (Monthly) Card Example -->
    <% @test_plans.each do |test_plan|%>
        <div class="col-12 mb-3">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h5 font-weight-bold text-primary text-uppercase mb-1">
                                <a href="<%= test_plan_path(id: test_plan.id) %>"><%= test_plan.title %>
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800"></div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>