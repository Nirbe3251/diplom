<div class="d-sm-flex align-items-center justify-content-between mb-4">
  <h1 class="h3 mb-0 text-gray-800"><%= current_page %></h1>
  <h1 class="h3 mb-0 text-gray-800"></h1>
  <%= generate_delete_button(@checklist) %>
</div>
<section>
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card mb-4">
          <div class="card-body">
            <%= form_with model: [@checklist], multiplie: true do |f|%>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Название чек-листа<i style="color: red">*</i></p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.text_field :head, class: "form-control form-control-user", placeholder: "Введите название чек-листа", value: @checklist.head %>
                </div>
              </div>
              <hr>
              <div class="row checklist_block">
                <div class="col-12">
                  <p class="mb-0">Список проверок: <i style="color: red">*</i></p>
                </div>
                <%# <div class="form-group col-sm-9"> %>
                  <%#= f.text_area :checklist, class: "form-control form-control-user", placeholder: "Введите название чек-листа", maxlength: 5000, style: "min-height: 3rem", placeholder: 'Введите список проверок', value: @checklist.checklist %>
                <%# </div> %>
              </div>
                <div class="btn btn-primary btn-user btn-block" id="add_checklist_block">Добавить проверку</div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Ожидаемый результат<i style="color: red">*</i></p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.text_field :expected_result, class: "form-control form-control-user", placeholder: "Введите ожидаемый результат", value: @checklist.expected_result %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Модуль</p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.text_field :test_module, class: "form-control form-control-user", placeholder: "Введите модуль", value: @checklist.test_module %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Предусловие</p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.text_field :test_type, class: "form-control form-control-user", placeholder: "Введите предусловие", value: @checklist.test_type %>
                </div>
              </div>
              <hr>
              <div class="row">
                <div class="col-sm-3">
                  <p class="mb-0">Проект</p>
                </div>
                <div class="form-group col-sm-9">
                  <%= f.select(:project_id, options_for_select(current_user.projects.all.to_a.map{ |p| [p.title, p.id] }, @checklist.project.id), {}, { prompt: "Выберите проект", class: "form-control form-control-user", role: 'button'}) %>
                </div>
              </div>
              <hr>
              <%= f.submit "Сохранить", class: "btn btn-primary btn-user btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>